{% extends "layout/main.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="position-relative my-3">
        <div class="container text-center">
            <div class="row row-cols-1 row-cols-xl-3 row-cols-md-2 mt-3" id="users-cards">

            </div>
        </div>

        <div class="modal fade" id="modal-delete-user"
             tabindex="-1"
             aria-labelledby="modal-delete-user"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn--secondary" id="cancel-delete-user" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button class="btn btn--danger" id="confirm-delete-user">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-column gap-2 position-fixed top-0 start-0 ms-3 mt-3">
            <button class="btn opacity-50" id="check-all-btn">Check all</button>
            <button class="btn opacity-50" id="uncheck-all-btn">Uncheck all</button>
            <button class="btn opacity-50" id="delete-cards-btn">Delete</button>
        </div>

        <a href="/users/new" class="btn position-fixed top-0 end-0 me-3 mt-3 opacity-50" role="button">
            Add user
        </a>

    </section>
{% endblock %}

{% block scripts %}
    <script src="{{ ASSETS_ROOT ~ "index.bundle.js" }}"></script>
{% endblock %}
